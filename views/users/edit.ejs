<%- include('../layouts/header')-%>



<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Edit Profile</h2>
              
              
              <form action="" method="post"  >

                <div class="form-outline mb-4">
                  <input  type="text" name="name" value='<%=user.name %> '  placeholder="Enter the name" required class="form-control form-control-lg" />
                  <input  type="hidden" name="user_id" value='<%=user._id %>'   required class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example1cg">Your Name</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="email" name="email" value="<%=user.email %> " placeholder="Enter the email" required class="form-control form-control-lg"  />
                    <label class="form-label" for="form3Example1cg">Your Email</label>
                </div>

                  <div class="form-outline mb-4">
                    <input type="tel" name="mobile" value='<%=user.mobile %> ' id="form3Example4cdg" placeholder="Enter the mobile" required class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example1cg">Your Mobile</label>
                  </div>

           
               

                <div class="form-outline mb-4">
                  <input type="password" name="password" value='<%=user.password %> 'id="form3Example4cdg" placeholder="Enter the password" required class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example5cg">Password</label>
                </div>



                <div class="d-flex flex-column align-items-center justify-content-center">
                    <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="edit">
                    <br><h4 class="alter text-success text center" id="sucessMessage"><%=locals.message ?message:''%></h4>
                   
                </div>

               
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
    // Remove error message after 3 seconds
    setTimeout(() => {
        const errorMessage = document.getElementById('span');
        if (errorMessage) {
            errorMessage.style.display = 'none';
        }
    }, 3000);
    setTimeout(() => {
        const sucessMessage = document.getElementById('sucessMessage');
        if (sucessMessage) {
            sucessMessage.style.display = 'none';
        }
    }, 3000);
</script>



<%- include('../layouts/footer')-%>
